<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaCursoDS.PaginaPrincipal">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0"
                             BackgroundColor="white"
                             Padding="0,0,0,0"
                             Margin="0"
                             HorizontalOptions="FillAndExpand">
                <Image Source="logo_etec_jau.png" Aspect="AspectFit"/>
            </StackLayout>
            <StackLayout Grid.Row="1" Margin="30" Spacing="10" Padding="10">

                <Button Text="Inicial" Clicked="Button_Clicked"/>
                <Button Text="Primeiro Ano" Clicked="Button_Clicked_1"/>
                <Button Text="Segundo Ano" Clicked="Button_Clicked_2"/>
                <Button Text="Terceiro Ano" Clicked="Button_Clicked_3"/>
                <Button Text="Vestibulinho" Clicked="Button_Clicked_4"/>
            </StackLayout>
        </Grid>
    </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage>

        </NavigationPage>
    </MasterDetailPage.Detail>




</MasterDetailPage>